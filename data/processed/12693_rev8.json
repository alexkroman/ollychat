[
  {
    "name": "All HTTP responses",
    "description": "",
    "queries": [
      "sum(rate(haproxy_frontend_http_responses_total[30m])) by (code)",
      "sum(rate(haproxy_backend_http_responses_total[30m])) by (code)"
    ]
  },
  {
    "name": "Incoming / Outgoing bytes",
    "description": "",
    "queries": [
      "sum(rate(haproxy_frontend_bytes_in_total[30m])*8) by (instance)",
      "sum(rate(haproxy_frontend_bytes_out_total[30m])*8) by (instance)",
      "sum(rate(haproxy_backend_bytes_in_total[30m])*8) by (instance)",
      "sum(rate(haproxy_backend_bytes_out_total[30m])*8) by (instance)"
    ]
  },
  {
    "name": "Number of connections",
    "description": "",
    "queries": [
      "sum(rate(haproxy_frontend_connections_total[30m])) by (instance)",
      "sum(rate(haproxy_backend_connection_errors_total[30m])) by (instance)"
    ]
  },
  {
    "name": "Requests and Responses",
    "description": "",
    "queries": [
      "sum(rate(haproxy_frontend_http_requests_total[30m])) by (instance)",
      "sum(rate(haproxy_frontend_request_errors_total[30m])) by (instance)",
      "sum(rate(haproxy_frontend_requests_denied_total[30m])) by (instance)",
      "sum(rate(haproxy_backend_redispatch_warnings_total[30m])) by (instance)",
      "sum(rate(haproxy_backend_retry_warnings_total[30m])) by (instance)",
      "sum(rate(haproxy_backend_response_errors_total[30m])) by (instance)",
      "sum(haproxy_backend_current_queue) by (instance)",
      "sum(rate(haproxy_backend_http_requests_total[30m])) by (instance)"
    ]
  },
  {
    "name": "Active sessions",
    "description": "",
    "queries": [
      "sum(haproxy_frontend_current_sessions) by (instance)",
      "sum(haproxy_backend_current_sessions) by (instance)"
    ]
  },
  {
    "name": "All Status",
    "description": "",
    "queries": [
      "count(haproxy_frontend_status == 1)",
      "count(haproxy_backend_status ==1)"
    ]
  },
  {
    "name": "Started...",
    "description": "",
    "queries": [
      "time() - haproxy_process_start_time_seconds"
    ]
  }
]