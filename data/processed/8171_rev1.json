[
  {
    "name": "Idle CPU",
    "description": "",
    "queries": [
      "100 - (avg by (cpu) (irate(node_cpu_seconds_total[5m])) * 100)"
    ]
  },
  {
    "name": "System Load",
    "description": "",
    "queries": [
      "node_load1",
      "node_load5",
      "node_load15"
    ]
  },
  {
    "name": "Memory Usage",
    "description": "",
    "queries": [
      "node_memory_MemTotal_bytes - node_memory_MemFree_bytes - node_memory_Buffers_bytes - node_memory_Cached_bytes",
      "node_memory_Buffers_bytes",
      "node_memory_Cached_bytes",
      "node_memory_MemFree_bytes"
    ]
  },
  {
    "name": "Memory Usage",
    "description": "",
    "queries": [
      "((node_memory_MemTotal_bytes - node_memory_MemFree_bytes  - node_memory_Buffers_bytes - node_memory_Cached_bytes) / node_memory_MemTotal_bytes) * 100"
    ]
  },
  {
    "name": "Disk I/O",
    "description": "",
    "queries": [
      "sum by (instance) (rate(node_nfsd_disk_bytes_read_total[2m]))",
      "sum by (instance) (rate(node_nfsd_disk_bytes_written_total[2m]))",
      "sum by (instance) (rate(node_disk_io_time_seconds_total[2m]))"
    ]
  },
  {
    "name": "Disk Space Usage",
    "description": "",
    "queries": [
      "(sum(node_filesystem_size_bytes) - sum(node_filesystem_free_bytes)) / sum(node_filesystem_size_bytes)"
    ]
  },
  {
    "name": "Network Received",
    "description": "",
    "queries": [
      "rate(node_network_receive_bytes_total[5m])"
    ]
  },
  {
    "name": "Network Transmitted",
    "description": "",
    "queries": [
      "rate(node_network_transmit_bytes_total[5m])"
    ]
  }
]