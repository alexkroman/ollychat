[
  {
    "name": "Total nodes",
    "description": "",
    "queries": [
      "sum(cluster_autoscaler_nodes_count)\n"
    ]
  },
  {
    "name": "Nodes available",
    "description": "Shows the nodes which are ready as a percent of the total nodes",
    "queries": [
      "sum(cluster_autoscaler_nodes_count)/sum(cluster_autoscaler_nodes_count)*100"
    ]
  },
  {
    "name": "Is cluster safe to scale?",
    "description": "",
    "queries": [
      "sum(cluster_autoscaler_cluster_safe_to_autoscale)"
    ]
  },
  {
    "name": "Number of unscheduled pods",
    "description": "Tells you if there are unscheduled pods",
    "queries": [
      "sum(cluster_autoscaler_unschedulable_pods_count)"
    ]
  },
  {
    "name": "Last scaleDown activity",
    "description": "",
    "queries": [
      "sum(time()-cluster_autoscaler_last_activity)"
    ]
  },
  {
    "name": "Last autoscale activity",
    "description": "",
    "queries": [
      "sum(time()-cluster_autoscaler_last_activity)"
    ]
  },
  {
    "name": "Pod activity",
    "description": "Shows the evicted and unscheduled pods",
    "queries": [
      "sum(cluster_autoscaler_evicted_pods_total)",
      "sum(cluster_autoscaler_unschedulable_pods_count)"
    ]
  },
  {
    "name": "Node activity",
    "description": "Shows the state of the nodes as scaling happens",
    "queries": [
      "sum(cluster_autoscaler_nodes_count)",
      "sum(cluster_autoscaler_nodes_count)",
      "sum(cluster_autoscaler_nodes_count)\n"
    ]
  },
  {
    "name": "Autoscaling activity",
    "description": "",
    "queries": [
      "sum(cluster_autoscaler_scaled_up_nodes_total)",
      "sum(cluster_autoscaler_unneeded_nodes_count)",
      "sum(cluster_autoscaler_nodes_count)\n"
    ]
  },
  {
    "name": "Cluster direction?",
    "description": "Is the cluster scaling up, down or ticking along okay?",
    "queries": [
      "sum(cluster_autoscaler_scaled_up_nodes_total)-sum(cluster_autoscaler_scaled_down_nodes_total)"
    ]
  }
]