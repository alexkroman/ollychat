[
  {
    "name": "Rows",
    "description": "",
    "queries": [
      "sum(irate(pg_stat_database_tup_fetched[5m]))",
      "sum(irate(pg_stat_database_tup_returned[5m]))",
      "sum(irate(pg_stat_database_tup_inserted[5m]))",
      "sum(irate(pg_stat_database_tup_updated[5m]))",
      "sum(irate(pg_stat_database_tup_deleted[5m]))"
    ]
  },
  {
    "name": "QPS",
    "description": "",
    "queries": [
      "sum(irate(pg_stat_database_xact_commit[5m])) + sum(irate(pg_stat_database_xact_rollback[5m]))"
    ]
  },
  {
    "name": "Buffers",
    "description": "",
    "queries": [
      "irate(pg_stat_bgwriter_buffers_alloc[5m])",
      "irate(pg_stat_bgwriter_buffers_backend_fsync[5m])",
      "irate(pg_stat_bgwriter_buffers_backend[5m])",
      "irate(pg_stat_bgwriter_buffers_clean[5m])",
      "irate(pg_stat_bgwriter_buffers_checkpoint[5m])"
    ]
  },
  {
    "name": "Conflicts/Deadlocks",
    "description": "",
    "queries": [
      "sum(rate(pg_stat_database_deadlocks[5m]))",
      "sum(rate(pg_stat_database_conflicts[5m]))"
    ]
  },
  {
    "name": "Cache hit ratio",
    "description": "",
    "queries": [
      "sum(pg_stat_database_blks_hit) / (sum(pg_stat_database_blks_hit) + sum(pg_stat_database_blks_read))"
    ]
  },
  {
    "name": "Number of active connections",
    "description": "",
    "queries": [
      "pg_stat_database_numbackends"
    ]
  }
]