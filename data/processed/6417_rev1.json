[
  {
    "name": "Cluster Pod Usage",
    "description": "",
    "queries": [
      "sum(kube_pod_info{node=~\"$node\"}) / sum(kube_node_status_allocatable_pods{node=~\".*\"})"
    ]
  },
  {
    "name": "Cluster CPU Usage",
    "description": "",
    "queries": [
      "sum(kube_pod_container_resource_requests_cpu_cores{node=~\"$node\"}) / sum(kube_node_status_allocatable_cpu_cores{node=~\"$node\"})"
    ]
  },
  {
    "name": "Cluster Memory Usage",
    "description": "",
    "queries": [
      "sum(kube_pod_container_resource_requests_memory_bytes{node=~\"$node\"}) / sum(kube_node_status_allocatable_memory_bytes{node=~\"$node\"})"
    ]
  },
  {
    "name": "Cluster Disk Usage",
    "description": "",
    "queries": [
      "(sum (node_filesystem_size{nodename=~\"$node\"}) - sum (node_filesystem_free{nodename=~\"$node\"})) / sum (node_filesystem_size{nodename=~\"$node\"})"
    ]
  },
  {
    "name": "Cluster Pod Capacity",
    "description": "",
    "queries": [
      "sum(kube_node_status_allocatable_pods{node=~\"$node\"})",
      "sum(kube_node_status_capacity_pods{node=~\"$node\"})",
      "sum(kube_pod_info{node=~\"$node\"})"
    ]
  },
  {
    "name": "Cluster CPU Capacity",
    "description": "",
    "queries": [
      "sum(kube_node_status_capacity_cpu_cores{node=~\"$node\"})",
      "sum(kube_node_status_allocatable_cpu_cores{node=~\"$node\"})",
      "sum(kube_pod_container_resource_requests_cpu_cores{node=~\"$node\"})"
    ]
  },
  {
    "name": "Cluster Mem Capacity",
    "description": "",
    "queries": [
      "sum(kube_node_status_allocatable_memory_bytes{node=~\"$node\"})",
      "sum(kube_node_status_capacity_memory_bytes{node=~\"$node\"})",
      "sum(kube_pod_container_resource_requests_memory_bytes{node=~\"$node\"})"
    ]
  },
  {
    "name": "Cluster Disk Capacity",
    "description": "",
    "queries": [
      "sum(node_filesystem_size{nodename=~\"$node\"}) - sum(node_filesystem_free{nodename=~\"$node\"})",
      "sum(node_filesystem_size{nodename=~\"$node\"})"
    ]
  },
  {
    "name": "Deployment Replicas - Up To Date",
    "description": "",
    "queries": [
      "kube_deployment_status_replicas{namespace=~\"$namespace\"}"
    ]
  },
  {
    "name": "Deployment Replicas",
    "description": "",
    "queries": [
      "sum(kube_deployment_status_replicas{namespace=~\"$namespace\"})"
    ]
  },
  {
    "name": "Deployment Replicas - Updated",
    "description": "",
    "queries": [
      "sum(kube_deployment_status_replicas_updated{namespace=~\"$namespace\"})"
