[
  {
    "name": "Number of live nodes",
    "description": "",
    "queries": [
      "solr_collections_live_nodes",
      "count(count by (node_name) (solr_collections_replica_state)) < solr_collections_live_nodes or solr_collections_live_nodes"
    ]
  },
  {
    "name": "Zookeepers",
    "description": "",
    "queries": [
      "count(solr_zookeeper_nodestatus == 1)",
      "solr_zookeeper_ensemble_size"
    ]
  },
  {
    "name": "Shard leaders",
    "description": "",
    "queries": [
      "solr_collections_shard_leader"
    ]
  },
  {
    "name": "Number of collections",
    "description": "",
    "queries": [
      "count(count by (collection) (solr_collections_replica_state))"
    ]
  },
  {
    "name": "Current replica state",
    "description": "",
    "queries": [
      "count(solr_collections_replica_state)",
      "count(solr_collections_replica_state == 1) OR on() vector(0)",
      "count(solr_collections_replica_state) OR on() vector(0)",
      "count(solr_collections_replica_state) OR on() vector(0)",
      "count(solr_collections_replica_state) OR on() vector(0)"
    ]
  },
  {
    "name": "Replica state history",
    "description": "Active replicas have value 0. Non-active replicas will show stacked in the graph.",
    "queries": [
      "1 - solr_collections_replica_state"
    ]
  }
]