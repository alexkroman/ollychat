[
  {
    "name": "Messages in/sec",
    "description": "Summed delta between High and Low watermark of all partitions in the given topic. Therefore not accurate for compacted topics that contain compacted records.",
    "queries": [
      "sum by (kubernetes_pod_name) (rate(kminion_kafka_topic_high_water_mark_sum[30m]))"
    ]
  },
  {
    "name": "Cluster Version",
    "description": "",
    "queries": [
      "kminion_kafka_cluster_info"
    ]
  },
  {
    "name": "Brokers",
    "description": "",
    "queries": [
      "kminion_kafka_broker_info"
    ]
  },
  {
    "name": "Brokers Online",
    "description": "",
    "queries": [
      "kminion_kafka_cluster_info"
    ]
  },
  {
    "name": "Log Dir Size by Broker",
    "description": "Log dir size across all log dirs, topics and partitions for a given broker.",
    "queries": [
      "avg by (broker_id) (kminion_kafka_broker_log_dir_size_total_bytes)"
    ]
  },
  {
    "name": "Messages in/sec by topic [Top 15]",
    "description": "",
    "queries": [
      "avg by (topic_name) (rate(kminion_kafka_topic_high_water_mark_sum[30m]))"
    ]
  },
  {
    "name": "Top Offset Committers [Top 5]",
    "description": "",
    "queries": [
      "avg by (group_id) (rate(kminion_kafka_consumer_group_offset_commits_total[30m]))"
    ]
  },
  {
    "name": "Offset commits processed",
    "description": "",
    "queries": [
      "avg by (kubernetes_pod_name) (rate(kminion_exporter_offset_consumer_records_consumed_total[30m]))"
    ]
  }
]