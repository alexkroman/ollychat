[
  {
    "name": "Pool Storage",
    "description": "",
    "queries": [
      "sum((ceph_pool_max_avail) *on (pool_id) group_left(name)(ceph_pool_metadata)) by (name)",
      "sum((ceph_pool_stored) *on (pool_id) group_left(name)(ceph_pool_metadata)) by (name)",
      "sum((ceph_pool_stored + ceph_pool_max_avail) *on (pool_id) group_left(name)(ceph_pool_metadata)) by (name)",
      "sum((ceph_pool_stored_raw) *on (pool_id) group_left(name)(ceph_pool_metadata)) by (name)"
    ]
  },
  {
    "name": "Usage",
    "description": "",
    "queries": [
      "sum without (instance, pool_id, name) ((ceph_pool_stored / (ceph_pool_stored + ceph_pool_max_avail)) *on (pool_id) group_left(name)(ceph_pool_metadata))"
    ]
  },
  {
    "name": "Objects in Pool",
    "description": "",
    "queries": [
      "sum((ceph_pool_objects) *on (pool_id) group_left(name)(ceph_pool_metadata)) by (name)",
      "sum((ceph_pool_dirty) *on (pool_id) group_left(name)(ceph_pool_metadata)) by (name)",
      "sum((ceph_pool_quota_objects) *on (pool_id) group_left(name)(ceph_pool_metadata)) by (name)"
    ]
  },
  {
    "name": "IOPS",
    "description": "",
    "queries": [
      "sum((irate(ceph_pool_rd[3m])) *on (pool_id) group_left(name)(ceph_pool_metadata)) by (name)",
      "sum((irate(ceph_pool_wr[3m])) *on (pool_id) group_left(name)(ceph_pool_metadata)) by (name)"
    ]
  },
  {
    "name": "Throughput",
    "description": "",
    "queries": [
      "sum((irate(ceph_pool_rd_bytes[5m])) *on (pool_id) group_left(name)(ceph_pool_metadata)) by (name)",
      "sum((irate(ceph_pool_wr_bytes[5m])) *on (pool_id) group_left(name)(ceph_pool_metadata)) by (name)"
    ]
  }
]