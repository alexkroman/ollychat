[
  {
    "name": "Cluster memory usage",
    "description": "",
    "queries": [
      "(sum(node_memory_MemTotal) - sum(node_memory_MemFree+node_memory_Buffers+node_memory_Cached) ) / sum(node_memory_MemTotal) * 100"
    ]
  },
  {
    "name": "Cluster CPU usage",
    "description": "",
    "queries": [
      "sum(sum by (container_name)( rate(container_cpu_usage_seconds_total[5m] ) )) / count(node_cpu) * 100"
    ]
  },
  {
    "name": "Cluster Filesystem usage",
    "description": "",
    "queries": [
      "(sum(node_filesystem_size) - sum(node_filesystem_free) ) / sum(node_filesystem_size) * 100"
    ]
  },
  {
    "name": "Pod CPU usage",
    "description": "",
    "queries": [
      "sum by (container_name)( rate(container_cpu_usage_seconds_total[5m] ) )"
    ]
  },
  {
    "name": "Pod memory usage",
    "description": "",
    "queries": [
      "sort_desc(sum(container_memory_usage_bytes) by (container_name, image))"
    ]
  },
  {
    "name": "Pod Network i/o",
    "description": "",
    "queries": [
      "sort_desc(sum by (pod_name) (rate (container_network_receive_bytes_total[5m])))",
      "sort_desc(sum by (pod_name) (rate (container_network_transmit_bytes_total[5m])))"
    ]
  }
]