  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsc",
    "lint": "eslint 'src/**/*.ts'",
    "test": "node --experimental-vm-modules node_modules/.bin/jest",
    "cli:debug": "node --inspect-brk -r ts-node/register --loader ts-node/esm src/interfaces/commandLineInterface.ts",
    "cli:start": "npm run build && node --no-warnings dist/interfaces/commandLineInterface.js",
    "evals:load": "npm run build && node --no-warnings dist/evals/createInputs.js",
    "evals:start": "npm run build && node --no-warnings dist/evals/evaluatorChain.js",
    "slack:start": "npm run build && node dist/interfaces/slackBot.js",
    "docker:compose:up": "docker-compose -f deploy/slack/docker-compose.yml up --build",
    "demo:cluster:create": "node --loader ts-node/esm deploy/demos/create-cluster.ts",
    "demo:online-boutique:install": "node --loader ts-node/esm deploy/demos/install-online-boutique.ts",
    "demo:prometheus:install": "node --loader ts-node/esm deploy/demos/install-prometheus.ts",
    "demo:grafana:install": "node --loader ts-node/esm deploy/demos/install-grafana.ts",
    "demo:prometheus-lb:install": "node --loader ts-node/esm deploy/demos/install-prometheus-external.ts",
    "grafana:port-forward": "export POD_NAME=$(kubectl get pods --namespace monitoring -l 'app.kubernetes.io/name=grafana,app.kubernetes.io/instance=grafana' -o jsonpath='{.items[0].metadata.name}') && kubectl --namespace monitoring port-forward $POD_NAME 3000",
    "prepare": "husky"
  }
}
