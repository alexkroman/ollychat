  },
  "scripts": {
    "build": "tsc && npm run copy-txt",
    "lint": "eslint 'src/**/*.ts'",
    "start-chroma": "chroma run > /dev/null 2>&1 & echo $! > .chroma_pid",
    "stop-chroma": "kill $(cat .chroma_pid) && rm -f .chroma_pid",
    "load-data": "npm run refresh-metrics && npm run examples:load",
    "rebuild-training-data": "npm run start-chroma && npm run refresh-metrics && npm run refresh-examples",
    "refresh-metrics": "npm run metrics:import && npm run metrics:load",
    "refresh-examples": "npm run dashboards:import && npm run data:enrich && npm run examples:load",
    "copy-txt": "mkdir -p dist/prompts && cp -R src/prompts/*.txt dist/prompts/",
    "dev:cli": "node --watch --loader ts-node/esm src/interfaces/commandLineInterface.ts",
    "start:cli": "npm run build && node --no-warnings dist/interfaces/commandLineInterface.js",
    "dev:slack": "node --watch --loader ts-node/esm src/interfaces/slackBot.ts",
    "start:slack": "npm run build && node dist/interfaces/slackBot.js",
    "dashboards:import": "node --loader ts-node/esm src/scripts/importDashboards.ts",
    "data:enrich": "node --loader ts-node/esm src/scripts/enrichExampleData.ts",
    "metrics:import": "node --loader ts-node/esm src/scripts/importMetrics.ts",
    "examples:load": "node --loader ts-node/esm src/scripts/loadExampleData.ts",
    "metrics:load": "node --loader ts-node/esm src/scripts/loadMetricData.ts",
    "docker:run": "docker-compose -f deploy/slack/docker-compose.yml up --build",
    "create-online-boutique-cluster": "node --loader ts-node/esm deploy/demos/create-cluster.ts",
    "install-online-boutique-demo": "node --loader ts-node/esm deploy/demos/install-online-boutique.ts",
    "install-prometheus-demo": "node --loader ts-node/esm deploy/demos/install-prometheus.ts",
    "install-prometheus-load-balancer-demo": "node --loader ts-node/esm deploy/demos/install-prometheus-external.ts",
    "prepare": "husky"
  }
}
