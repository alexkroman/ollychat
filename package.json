  "description": "",
  "dependencies": {
    "@langchain/community": "^0.3.24",
    "@langchain/langgraph": "^0.2.40",
    "@slack/bolt": "^4.2.0",
    "chalk": "^5.4.1",
    "chromadb": "^1.10.3",
    "chromadb-default-embed": "^2.13.2",
    "dotenv": "^16.4.7",
    "figlet": "^1.8.0",
    "fs": "^0.0.1-security",
    "langchain": "^0.3.11",
    "openai": "^4.78.1",
    "path": "^0.12.7",
    "posthog-node": "^4.4.1",
    "readline": "^1.3.0",
    "zod": "^3.24.1"
  },
  "type": "module",
  "devDependencies": {
    "@types/figlet": "^1.7.0",
    "@types/node": "^22.10.6",
    "@types/shelljs": "^0.8.15",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build": "tsc && npm run copy-txt",
    "start-chroma": "chroma run > /dev/null 2>&1 & echo $! > .chroma_pid",
    "stop-chroma": "kill $(cat .chroma_pid) && rm -f .chroma_pid",
    "load-data": "npm run start-chroma && npm run refresh-metrics && npm run examples:load && npm run stop-chroma",
    "rebuild-training-data": "npm run start-chroma && npm run refresh-metrics && npm run refresh-examples && npm run stop-chroma",
    "refresh-metrics": "npm run metrics:import && npm run metrics:load",
    "refresh-examples": "npm run dashboards:import && npm run data:enrich && npm run examples:load",
    "copy-txt": "mkdir -p dist/prompts && cp -R src/prompts/*.txt dist/prompts/",
    "dev:cli": "npm run start-chroma && node --watch --loader ts-node/esm src/interfaces/commandLineInterface.ts && npm run stop-chroma",
    "start:cli": "npm run build && npm run start-chroma && node --no-warnings dist/interfaces/commandLineInterface.js && npm run stop-chroma",
    "dev:slack": "npm run start-chroma && node --watch --loader ts-node/esm src/interfaces/slackBot.ts && npm run stop-chroma",
    "start:slack": "npm run build && node dist/interfaces/slackBot.js",
    "dashboards:import": "node --loader ts-node/esm src/scripts/importDashboards.ts",
    "data:enrich": "node --loader ts-node/esm src/scripts/enrichExampleData.ts",
    "metrics:import": "node --loader ts-node/esm src/scripts/importMetrics.ts",
    "examples:load": "node --loader ts-node/esm src/scripts/loadExampleData.ts",
    "metrics:load": "node --loader ts-node/esm src/scripts/loadMetricData.ts",
    "docker:run": "docker-compose -f deploy/slack/docker-compose.yml up --build",
    "create-online-boutique-cluster": "node --loader ts-node/esm demos/create-cluster.ts",
    "helm-upgrade": "node --loader ts-node/esm demos/helm-upgrade.ts"

  }
}
