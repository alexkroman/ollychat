    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "scripts": {
    "build": "tsc && npm run copy-txt",
    "copy-txt": "mkdir -p dist/prompts && cp -R src/prompts/*.txt dist/prompts/",
    "dev:cli": "node --watch --loader ts-node/esm src/ui/cli.ts",
    "start:cli": "npm run build && node --no-warnings dist/ui/cli.js",
    "dev:slack": "node --watch --loader ts-node/esm src/ui/slack.ts",
    "start:slack": "npm run build && node dist/ui/slack.js",
    "dashboards:import": "node --loader ts-node/esm scripts/importDashboards.ts",
    "data:refine": "node --loader ts-node/esm scripts/enrichExampleData.ts",
    "metrics:import": "node --loader ts-node/esm scripts/importMetrics.ts",
    "examples:load": "node --loader ts-node/esm scripts/loadExampleData.ts",
    "metrics:load": "node --loader ts-node/esm scripts/loadMetricData.ts"
  }
}
